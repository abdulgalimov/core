{
  "name": "@mesto/core",
  "version": "0.0.1",
  "description": "Единый API для проектов, связанных с mesto.co",
  "repository": "github:mesto-co/core.git",
  "homepage": "https://github.com/mesto-co/core#readme",
  "engines": {
    "node": ">=12.18.3"
  },
  "main": "app/index.js",
  "scripts": {
    "eslint": "[ \"$CI\" = true ] && eslint --quiet -f codeframe --ext js,ts . || eslint --ext js,ts .",
    "eslint:fix": "[ \"$CI\" = true ] && eslint --quiet -f codeframe --ext js,ts . --fix || eslint --ext js,ts . --fix",
    "lint": "npm run eslint && npm run tsc",
    "tsc": "tsc -p .",
    "clean": "rimraf lib && rimraf types",
    "test": "npm run lint && jest --testPathPattern=test/",
    "build": "tsc -p .",
    "watch": "tsc -w -p .",
    "prestart": "npm run build",
    "start": "node .",
    "start:dev": "knex migrate:latest && nodemon",
    "start:ci": "knex migrate:latest && node ."
  },
  "keywords": [
    "mesto.co",
    "API"
  ],
  "author": {
    "name": "Команда mesto.co"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.8",
    "@types/express-validator": "^3.0.0",
    "@types/knex": "^0.16.1",
    "@types/node": "^14.6.4",
    "@types/rimraf": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.1",
    "eslint-plugin-notice": "^0.9.10",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "express-validator": "^6.6.1",
    "knex": "^0.21.5",
    "pg": "^8.3.3",
    "rimraf": "^3.0.2"
  }
}
